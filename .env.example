# IMAP Mail MCP defaults to read-only operations. Do not use SMTP credentials here.
# Proton Bridge default IMAP: localhost:1143, SSL usually off for local use.

IMAP_HOST=127.0.0.1
IMAP_PORT=1143
IMAP_SECURE=false
# If using TLS (IMAP_SECURE=true), set to false to allow Proton Bridge's self-signed cert.
# IMAP_TLS_REJECT_UNAUTHORIZED=false
IMAP_USER=your-bridge-user@proton.me
IMAP_PASS=your-bridge-password

# Optional: limit message body length returned to the LLM (chars). 0 = no limit.
MAIL_MAX_BODY_LENGTH=50000

# Optional: global hard cap for list/search result sizes.
MAIL_MAX_RESULTS=200

# Optional: max snippet length when includeSnippet=true on list/search tools.
MAIL_SNIPPET_LENGTH=400
