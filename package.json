{
  "name": "imap-mail-mcp",
  "version": "1.0.0",
  "description": "IMAP MCP server with read-only defaults. Exposes mail as tools for local LLMs (e.g. Ollama).",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "imap-mail-mcp": "dist/index.js",
    "proton-bridge-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".env.example",
    "scripts/test-mcp.mjs"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "npm run -s build && node --test --test-concurrency=1 tests/*.test.mjs",
    "test:mcp": "node scripts/test-mcp.mjs",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "proton",
    "bridge",
    "imap",
    "email",
    "ollama",
    "read-only",
    "mail"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FaisalFehad/imap-mail-mcp.git"
  },
  "homepage": "https://github.com/FaisalFehad/imap-mail-mcp#readme",
  "bugs": {
    "url": "https://github.com/FaisalFehad/imap-mail-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.3.1",
    "imapflow": "^1.0.200",
    "mailparser": "^3.6.6"
  },
  "devDependencies": {
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}
